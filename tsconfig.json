{
	"compilerOptions": {
	  "moduleResolution": "node",
	  "module": "es2020",
	  "lib": ["es2020", "DOM"],
	  "target": "es2019",
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "strict": true,
	  "checkJs": true,
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "allowJs": true,
	  "baseUrl": ".",
	  "paths": {
		"$lib": ["src/lib"],
		"$lib/*": ["src/lib/*"],
		"$app/*": ["node_modules/@sveltejs/kit/src/runtime/app/*"]
	  },
	  "verbatimModuleSyntax": true
	},
	"include": [
	  "src/**/*.d.ts",
	  "src/**/*.ts",
	  "src/**/*.js",
	  "src/**/*.svelte"
	],
	"exclude": [
	  "node_modules",
	  "dist",
	  ".svelte-kit",
	  "svelte.config.js", // Excluir archivos de configuraci√≥n
	  "postcss.config.cjs",
	  "eslint.config.js",
	  "tailwind.config.ts"
	]
  }